# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (Local)
MONGODB_URI=mongodb://localhost:27017/zoom-registration-app

# Database Configuration (Docker Production)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme_secure_password_here

# JWT Secret for Authentication (IMPORTANT: Change in production!)
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Owner Registration Secret (Required for creating owner accounts in production)
OWNER_REGISTRATION_SECRET=your_owner_registration_secret_here

# Frontend URL
CLIENT_URL=http://localhost:3000

# Production Frontend URL (for deployment)
REACT_APP_API_URL=https://your-api-domain.com

# Zoom OAuth (Optional - for server-side OAuth flow)
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
